<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <RelativeLayout
        android:id="@+id/main_row_lay"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <com.example.testmvp.generic.RoundedImageView
            android:id="@+id/ivImg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="10sp" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="1"
            android:text="Support of the Democratic candidcate Jon Ossoff after his Support of the Democratic candidcate Jon Ossoff after his"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/ivImg"
            android:layout_toStartOf="@id/ivarrow"
            android:layout_alignTop="@+id/ivImg"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_toStartOf="@+id/ivarrow"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            android:text="By DAVID LEONHARDT and STUART A....."
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignEnd="@+id/ivarrow"
            android:layout_alignStart="@+id/tvSubtitle"
            android:layout_below="@+id/tvSubtitle"
            android:layout_marginTop="2dp"
            android:layout_toStartOf="@+id/tvTitle"
            android:gravity="bottom"
            android:id="@+id/relativeLayout">

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

        <TextView
            android:id="@+id/tvBYAutoh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivImg"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_toStartOf="@+id/imageView"
            android:gravity="center|start"
            android:singleLine="true"
            android:text="Thompson"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:layout_marginEnd="2dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvBYAutoh"
            android:layout_alignBottom="@+id/tvBYAutoh"
            android:layout_alignEnd="@+id/relativeLayout"
            android:singleLine="true"
            android:text="2017-06-23"
            android:textSize="10sp"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/tvDate"
            android:layout_toStartOf="@+id/tvDate"
            android:src="@drawable/ic_event_black_24dp"
            android:id="@+id/imageView" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        android:layout_marginStart="70dp" />
</LinearLayout>
